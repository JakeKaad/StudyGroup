<% if @new_post == true %>
	<%= render 'shared/error', obj: group %>
	<%= form_for [group, post] do |f| %>
		<div class='form-group'>
			<%= f.label 		 :title %><br/>
			<%= f.text_field :title %>
		</div>

		<div class='form-group'>
			<%= f.label :body %><br/>
			<%= f.text_area :body, rows: 2 %>
		</div>
		<br/>
		<%= f.submit "New Post", class: 'btn btn-success' %>
	<% end %>
<% end %>