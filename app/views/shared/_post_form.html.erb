
<h3>Posts 
	<span class="label label-default">
		<%= link_to 'New Post', course_path(group, new_post: true), class: "sidebar-a" %>
	</span>
</h3>

<% if @new_post == true %>
	<%= render 'shared/error', obj: group %>
	<%= form_for [group, post] do |f| %>
		<div class='control-group'>
			<%= f.label 		 :title %><br/>
			<%= f.text_field :title %>
		</div>

		<div class='control-group'>
			<%= f.label :body %><br/>
			<%= f.text_area :body, rows: 2 %>
		</div>
		<br/>
		<%= f.submit "New Post", class: 'btn btn-success' %>
	<% end %>
<% end %>