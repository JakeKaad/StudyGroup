<% if params[:new_study_group] == "true" %>
	<%= render 'shared/error', obj: study_group %>
	<%= form_for [study_group] do |f| %>
		<div class='form-group'>
			<%= f.label 		 :name %><br/>
			<%= f.text_field :name %>
		</div>

		<div class='form-group'>
			<%= f.label     :description %><br/>
			<%= f.text_area :description, rows: 2 %>
		</div>
		<%= f.hidden_field :course_id %>
		<%= hidden_field_tag :course_id, "#{@course.id}" %>

		<%= f.submit "Create Study Group", class: 'btn btn-success' %>
		<br/>
	<% end %>
<% end %>